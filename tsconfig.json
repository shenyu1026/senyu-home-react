{
  "compilerOptions": {
    // 👇 目标 & 库：带上 ES2020 集合类和 DOM
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],

    // 模块解析保持 Vite 的默认
    "module": "ESNext",
    "moduleResolution": "Bundler",

    // 让 TS 知道 Node 全局变量（__dirname / path 等）
    "types": ["node"],

    "strict": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
